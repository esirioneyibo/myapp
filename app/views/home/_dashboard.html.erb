<section class="section pt3">
	<p class="title is-5 border-bottom pb3 has-text-centered">Welcome <%= current_user.first_name %> 👋🏻</p>
	<div class="columns">

		<div class="column border-right ph4">
			<div class="level">				
				<aside class="menu">
					<p class="menu-label ">
						General
					</p>
					<ul class="menu-list has-background-primary">
						<li><a>Dashboard</a></li>
						<li><a>Customers</a></li>
					</ul>
					<p class="menu-label">
						Administration
					</p>
					<ul class="menu-list">
						<li><a>Team Settings</a></li>
						<li>
							<a>Manage Your Team</a>
							<ul>
								<li><a>Members</a></li>
								<li><a>Plugins</a></li>
								<li><a>Add a member</a></li>
							</ul>
						</li>
						<li><a>Invitations</a></li>
						<li><a>Cloud Storage Environment Settings</a></li>
						<li><a>Authentication</a></li>
					</ul>
					<p class="menu-label">
						Transactions
					</p>
					<ul class="menu-list">
						<li><a>Payments</a></li>
						<li><a>Transfers</a></li>
						<li><a>Balance</a></li>
					</ul>
				</aside>
			</div>
		</div>

		<div class="column border-right ph4">
			<div class="level">
				<div class="level-left">
					<h3 class="subtitle is-5">My Reviews <span class="tag is-rounded"><%#= @projects.count %></span></h3>
				</div>
				<div class="level-right">
					<p class="field">
						<%#= link_to new_project_path, class: 'button is-small' do %>
						<span class="icon is-small has-text-link"><i class="fa fa-plus"></i></span>
						<%# end %>
					</p>
				</div>
			</div>
			<hr />
			<%# @projects.each do |project| %>
			<div class="content border-bottom pb4">
				<p class="title is-4">
					<%#= link_to project.name, project %>
				</p>
				<p class="subtitle is-6">
					<%#= link_to project.team.name, project.team %>
				</p>
				<p class="f6">Created by: <%#= project.user.name %></p>
			</div>
			<%# end %>
			
		</div>
		<div class="column border-right ph4">
			<div class="level">
				<div class="level-left">
					<h3 class="subtitle is-5">My Clients <span class="tag is-rounded"><%#= @teams.count %></span></h3>
				</div>
				<div class="level-right">
					<p class="field">
						<%#= link_to new_team_path, class: 'button is-small' do %>
						<span class="icon is-small has-text-link"><i class="fa fa-plus"></i></span>
						<%# end %>
					</p>
				</div>
			</div>
			<hr />
			<%# @teams.each do |team| %>
			<div class="content border-bottom pb4">
				<p class="title is-4">
					<%#= link_to team.name, team %>
				</p>
				<p class="subtitle is-6"><%#= team.users.count %> Members</p>
				<span class="f6"><%#= safe_join(team.users.map { |user| user.name }, ', ') %></span>
			</div>
			<%# end %>

		</div>

		<div class="column ph4">
			<h3 class="subtitle is-5">Job Activity</h3>
			<hr />
			<ul class="list">
				<%#= render_activities(@activities) %>
			</ul>
		</div>
		
	</div>
</section>